<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AIB6.LetterTab">
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Letter Generator" FontSize="24" FontWeight="Bold"/>

        <!-- Dropdowns in one horizontal row -->
        <Grid ColumnDefinitions="*,*,*,*">
            <StackPanel Grid.Column="0" Spacing="4">
                <TextBlock Text="Letter Type"/>
                <ComboBox x:Name="LetterTypeDropdown"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Spacing="4">
                <TextBlock Text="Tone"/>
                <ComboBox x:Name="ToneDropdown"/>
            </StackPanel>
            <StackPanel Grid.Column="2" Spacing="4">
                <TextBlock Text="Formality"/>
                <ComboBox x:Name="FormalityDropdown"/>
            </StackPanel>
            <StackPanel Grid.Column="3" Spacing="4">
                <TextBlock Text="Length"/>
                <ComboBox x:Name="LengthDropdown"/>
            </StackPanel>
        </Grid>

        <TextBlock Text="Instructions (optional)"/>
        <TextBox x:Name="UserInput" AcceptsReturn="True" Height="100" Watermark="Additional details..."/>

        <TextBlock Text="Model Preference" FontWeight="Bold"/>
        <TextBlock FontStyle="Italic" Text="Choose your preferred response mode. 'Faster' gives quicker drafts. 'Detailed' may take longer, but produces richer letters." TextWrapping="Wrap"/>

        <StackPanel Orientation="Horizontal" Spacing="10">
            <RadioButton x:Name="FasterRadio" Content="Faster Response" IsChecked="True"/>
            <RadioButton x:Name="DetailedRadio" Content="More Detailed (Slower)"/>
        </StackPanel>

        <TextBlock Text="Preview" Margin="0,10,0,0"/>
        <TextBox x:Name="PreviewBox" AcceptsReturn="True" Height="200" TextWrapping="Wrap"/>

        <TextBlock x:Name="StatusText" FontStyle="Italic" Foreground="Gray"/>

        <StackPanel Orientation="Horizontal" Spacing="10">
            <Button Content="Generate Draft" Click="OnGenerateClick"/>
            <Button Content="Save Draft" Click="OnSaveClick"/>
        </StackPanel>
    </StackPanel>


</UserControl>